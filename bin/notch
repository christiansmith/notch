#!/usr/bin/env node


/**
 * Module dependecies.
 */

var notch = require('../index.js')
  , path = require('path')
  , fs = require('fs');

/**
 * Initialize Notch client
 */

var client = notch.createClient();

/**
 * Notch Version
 */

var version = '0.0.0';

/**
 * Notch Help
 */

var help = 'RTFS';

/**
 * Argument Aliases
 */

var aliases = { 
  '-h': 'help',
  '--help': 'help',
  '-v': 'version',
  '--version': 'version'
};


/**
 * Get args and replace aliases
 */

var args = process.argv.slice(2).map(function (arg) {
  return aliases[arg] || arg;
});

/**
 * The first arg is a  Notch command 
 */

var command = args.shift();

switch (command) {
  case 'version':
    console.log(version);
    process.exit(1);
    break;

  case 'help':
    console.log(help);
    process.exit(1);
    break;

  case 'push':
    var appname = args.shift()
      , apppath = path.join(process.cwd(), appname)
      , app = require(apppath)
      , targetname = args.shift();

    // where should this be called?
    app.revision();

    client.push(app, targetname);
    break;

  default:
    // simplify calling client commands here like so?
    // client.[cmd].apply(client, args);
    break;
}
